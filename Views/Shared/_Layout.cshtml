@{
    // Este código pega o nome do Controller da URL atual. Ex: "Home", "PessoaF", etc.
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoGeanBagattoli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoGeanBagattoli.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"> 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 min-vh-12 row">
            <div class="container-fluid col-md-12">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProjetoGeanBagattoli</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-up" style="font-size: 25px; font-style: bold; margin-left: 20px; margin-right: 10px;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    <ul class="navbar-nav text-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-calendar3" style="font-size: 50px;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">

            <aside class="col-md-2 p-3 bg-white border-end">

                <nav class="sidebar">
                    <ul class="nav nav-pills flex-column">

                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex justify-content-between" data-bs-toggle="collapse" href="#submenu-home" role="button" aria-expanded="false" aria-controls="submenu-home">
                                <span>Pessoa Física</span>
                                <i class="bi bi-chevron-right"></i>
                            </a>
                            <div class="collapse" id="submenu-home">
                                <ul class="nav flex-column ps-3">
                                    <li class="nav-item"><a class="nav-link text-muted fw-bolder fs-5" asp-area="" asp-controller="PessoaF" asp-action="NovoCadastroPF"><i class="bi bi-chevron-right me-2"></i>Cadastro<i class="bi bi-plus-circle ms-4"></i></a></li>
                                    <li class="nav-item"><a class="nav-link text-muted" style="margin-left: 25px;" href="#"><i class="bi bi-chevron-right me-2"></i>Consulta</a></li>
                                    <li class="nav-item"><a class="nav-link text-muted" style="margin-left: 25px;" href="#"><i class="bi bi-chevron-right me-2"></i>Aniversários</a></li>
                                    <li class="nav-item"><a class="nav-link text-muted" style="margin-left: 25px;" href="#"><i class="bi bi-chevron-right me-2"></i>Eventos</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex justify-content-between" href="#">
                                <span>Dashboard</span>
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex justify-content-between" href="#">
                                <span>Orders</span>
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex justify-content-between" href="#">
                                <span>Account</span>
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>

                    </ul>
                </nav>

            </aside>

            <main role="main" class="col-md-10 pb-3">
                @RenderBody()
            </main>

        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
