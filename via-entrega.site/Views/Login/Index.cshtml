@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Perfil do Usuário - ViaEntrega</title>
    <style>
        * {
          box-sizing: border-box;
          margin: 0;
          padding: 0;
        }

        body {
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
          background-color: #ff6803;
          color: white;
          min-height: 100vh;
          display: flex;
          flex-direction: column;
          align-items: center;
          padding: 20px;
        }

        header {
          text-align: center;
          margin-bottom: 40px;
        }

        header h1 {
          font-size: 3rem;
          letter-spacing: 5px;
          font-weight: 700;
          margin-top: 10px;
        }

        header p {
          letter-spacing: 3px;
          font-weight: 600;
          margin-top: 6px;
        }

        .profile-card {
          background: white;
          color: #ef6d15;
          border-radius: 12px;
          padding: 60px 40px;
          width: 320px;
          box-shadow: 0 4px 15px rgba(0,0,0,0.3);
          text-align: center;
        }

        .profile-card h2 {
          margin-bottom: 15px;
          font-size: 1.8rem;
        }

        .profile-card p {
          font-size: 1.1rem;
          margin-bottom: 25px;
        }

        input[type="text"],
        input[type="password"] {
          width: 100%;
          padding: 10px;
          margin: 10px 0;
          border: 1px solid #ccc;
          border-radius: 6px;
          font-size: 1rem;
        }

        button {
          background-color: #ef6d15;
          border: none;
          color: white;
          font-weight: 700;
          padding: 12px 25px;
          border-radius: 8px;
          cursor: pointer;
          font-size: 1.1rem;
          transition: background-color 0.3s ease;
        }

        button:hover {
          background-color: #d75e10;
        }

    </style>
</head>
<body>
    <header>
        <img src="~/assets/images/truck.png" alt="Caminhão ViaEntrega" width="250" height="150" />
        <h1>VIAENTREGA</h1>
    </header>

    <div class="profile-card">
        <h2>Login do Usuário</h2>
        <form action="#" method="post">
            <input type="text" name="usuario" placeholder="Usuário" required />
            <input type="password" name="senha" placeholder="Senha" required />
            <button type="submit">Entrar</button>
        </form>
    </div>

</body>
</html>